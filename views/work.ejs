<%# Adding Header Temlate %>
<%- include("partials/header") -%>

<!-- Title Heading -->
<div class="heading-box" data-aos="fade-right">
  <h1>Work List<br><%= today %></h1>
</div>

<!-- Main List -->
<div class="box">
  <%  workItems.forEach(function(workItem){ %>
      <div class="item">
        <input type="checkbox" name="deleteItem">
        <p><%= workItem %></p>
      </div>
  <% }); %>

  <form class="item" action="/work" method="post">
    <input type="text" name="newTask" placeholder="Create New Task" required>
    <button type="submit">+</button>
  </form>
</div>

<!-- Adding Footer Template -->
<%- include("partials/footer") -%>
